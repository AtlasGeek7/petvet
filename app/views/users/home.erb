                                   <tr>
                                     <td>Doctor:</td>
                                     <td class="style-1" style="max-height: 40px;"><%= @doctor.name %></td>
                                   </tr>
                                   <tr>
                                     <td>Date:</td>
                                     <td><%= a.apt_date %></td>
                                   </tr>
                                   <tr>
