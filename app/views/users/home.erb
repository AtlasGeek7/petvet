                              <br />
                              <label class="content" for="content"><b>&nbsp;</b></label>
                              <br />
                              <textarea class="style-1" placeholder="Share your experience here..." name="content" rows="11" cols="50"><%= @review.content %></textarea>
                              <br />
                              <label class="rating" for="rating"><b>Rate us:</b></label>
                              <select name="rating" for="review">
