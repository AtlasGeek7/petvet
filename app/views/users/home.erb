                  <%end%>
<!-- ################################################### END OF USER/PET DETAILS ################################################### -->

<!-- ################################################### BOOK ################################################### -->

                  <div class="section" id="book">
                    <%if !@current_user.appointments.first %>
                     <div class="half left">

                        <div align='center' class="show-container" style="margin-right: 0px; position: relative; left: 180px;">
