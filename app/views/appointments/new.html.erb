<%= form_for @appointment do |f| %>
<p>
  <%= f.label "Doctor:"%>
<br />

  <%= f.select :employee_id, options_for_select(@employees.collect {|e| [ e.name, e.id ] }) %>
</p>
<p>
  <%= f.label "Pet:"%>
<br />
  <%= f.select :pet_name, options_for_select(@pets.collect {|p| [ p.name ] }) %>
</p>
<p>
  <%= f.label "Reason:" %>
<br />
<%= f.select :reason, options_for_select(['Consultation','Surgery','Follow up','Lab work']) %>
</p>
<p>
  <%= f.label "Date:" %>
<br />
<%= f.select :apt_date, options_for_select(@dates) %>
</p>
<p>
  <%= f.label "Symptoms:" %>
<br />
  <%= f.text_area(:symptoms, cols: 20, rows: 10) %>
</p>
<p>
  <%= f.label "Full Name:" %>
<br />
  <%= f.text_field :full_name %>
</p>
<p>
  <%= f.hidden_field  "user_id", value: current_user.id %>
  <%= f.hidden_field  "status", value: "pending" %>
  <%= f.submit "Submit" %>
</p>
<% end %>

<% if @appointment.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@appointment.errors.count, "error") %>
      prohibited this appointment from being saved:
    </h2>

    <ul>
    <% @appointment.errors.full_messages.each do |msg| %>
      <p style="color: red;"> &bull; <%= msg %></p>
    <% end %>
    </ul>
  </div>
<% end %>


<div>
<p>
<a href="/appointments"> Go Back to Appointments Page </a>
</p>

<%= render "/users/home_link" %>

</div>
